<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.kimnono"
      android:versionCode="1"
      android:versionName="1.0" >
    <application android:label="@string/app_name" android:icon="@drawable/icon" >
        <activity android:name=".PartiesList"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddParty"
                  android:label="@string/party_create" android:noHistory="true">
            <intent-filter>
                <action android:name="org.kimnono.tarot.ADD_PARTY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PartyBoard"
                  android:label="@string/party_board" android:noHistory="true">
            <intent-filter>
                <action android:name="org.kimnono.tarot.ADD_PARTY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest> 
