<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.zoumbox.tarot">
    <application android:label="@string/app_name"
                 android:icon="@drawable/tarot_17_resized">
        <activity android:name=".PartiesList"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddParty"
                  android:label="@string/party_create"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="org.zoumbox.tarot.ADD_PARTY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".QRCodeMarket"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="org.zoumbox.tarot.QR_CODE_MARKET"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".QRCodeVersion"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="org.zoumbox.tarot.QR_CODE_VERSION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".PartyBoard"
                  android:label="@string/party_board">
            <intent-filter>
                <action android:name="org.zoumbox.tarot.PARTY_BOARD"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddDeal"
                  android:label="@string/deal_create"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="org.zoumbox.tarot.ADD_DEAL"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".PartyStatistics"
                  android:label="@string/statistics"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="org.zoumbox.tarot.PARTY_STATISTICS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
</manifest> 
